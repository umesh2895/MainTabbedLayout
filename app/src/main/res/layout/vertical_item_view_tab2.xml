<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="33dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_ngo_popular_ngo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:src="@drawable/ic_action_ngo_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/name_ngo_popular_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />

            <TextView
                android:id="@+id/detail_ngo_popular_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_ngo_popular_ngo"
                android:text="" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_date_popular_ngo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/ic_action_date" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">


            <TextView
                android:id="@+id/date_ngo_popular_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/time_ngo_popular_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_ngo_popular_ngo"
                android:text=""
                 />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_adress_popular_ngo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_marginTop="105dp"
            android:src="@drawable/ic_action_adress" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp">


            <TextView
                android:id="@+id/adress_ngo_popular_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>